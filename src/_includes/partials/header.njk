<header class="site-header">
  <div class="header-inner">
    <a href="/" class="site-logo">
      <img src="/assets/images/sailingtexasthumbnail.gif" alt="" width="50" height="50">
      <span class="logo-text">
        <span class="logo-main">Sailing Texas</span>
      </span>
    </a>

    <nav class="main-nav" id="main-nav" aria-label="Main navigation">
      {% for item in navigation.main %}
      <a href="{{ item.url }}" class="nav-link"{% if page.url == item.url %} aria-current="page"{% endif %}>
        {{ item.text }}
      </a>
      {% endfor %}
    </nav>

    <button class="menu-toggle" id="menu-toggle" aria-expanded="false" aria-controls="main-nav" aria-label="Toggle navigation menu">
      <svg class="menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"/>
        <line x1="3" y1="12" x2="21" y2="12"/>
        <line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
      <svg class="close-icon hidden" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>
  </div>

  <!-- Mobile Navigation Dropdown -->
  <div class="mobile-nav" id="mobile-nav" aria-hidden="true">
    <div class="mobile-nav-inner">
      <div class="mobile-nav-section">
        <h3>Main Navigation</h3>
        {% for item in navigation.main %}
        <a href="{{ item.url }}" class="mobile-nav-link"{% if page.url == item.url %} aria-current="page"{% endif %}>
          {{ item.text }}
        </a>
        {% endfor %}
      </div>
      <div class="mobile-nav-section">
        <h3>More Links</h3>
        {% for item in navigation.secondary %}
        <a href="{{ item.url }}" class="mobile-nav-link" {% if item.url.startsWith('http') %}target="_blank" rel="noopener"{% endif %}>
          {{ item.text }}
        </a>
        {% endfor %}
      </div>
    </div>
  </div>
</header>
