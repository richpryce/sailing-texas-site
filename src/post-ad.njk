<script>
  // Form validation and enhancement
  document.getElementById('boat-listing-form').addEventListener('submit', function(e) {
    const photos = document.getElementById('boat-photos').files;

    if (photos.length < 1) {
      e.preventDefault();
      alert('Please upload at least one photo of your boat.');
      return;
    }

    if (photos.length > 10) {
      e.preventDefault();
      alert('Please upload no more than 10 photos. You selected ' + photos.length + '.');
      return;
    }

    // Check total file size (limit to 25MB total)
    let totalSize = 0;
    for (let i = 0; i < photos.length; i++) {
      totalSize += photos[i].size;
    }

    if (totalSize > 25 * 1024 * 1024) {
      e.preventDefault();
      alert('Total photo size exceeds 25MB. Please use smaller images or fewer photos.');
      return;
    }
  });

  // Auto-format phone number
  document.getElementById('contact-phone').addEventListener('input', function(e) {
    let value = e.target.value.replace(/\D/g, '');
    if (value.length > 10) value = value.slice(0, 10);
    if (value.length >= 6) {
      value = value.slice(0, 3) + '-' + value.slice(3, 6) + '-' + value.slice(6);
    } else if (value.length >= 3) {
      value = value.slice(0, 3) + '-' + value.slice(3);
    }
    e.target.value = value;
  });
</script>
