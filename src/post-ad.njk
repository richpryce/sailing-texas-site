    <div class="content-grid">
      <div class="content-main">
        <!-- Form uses Formspree for handling - replace YOUR_FORM_ID with actual ID -->
        <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" enctype="multipart/form-data" id="boat-listing-form">

          <!-- Boat Information -->
          <div class="form-section">
            <h2>Boat Information</h2>

            <div class="form-row">
              <div class="form-group">
                <label for="boat-make">Make / Manufacturer <span class="required">*</span></label>
                <input type="text" id="boat-make" name="boat_make" required placeholder="e.g., Catalina, Hunter, MacGregor">
              </div>

              <div class="form-group">
                <label for="boat-model">Model <span class="required">*</span></label>
                <input type="text" id="boat-model" name="boat_model" required placeholder="e.g., 22, 25.5, 26X">
              </div>

              <div class="form-group">
                <label for="boat-year">Year <span class="required">*</span></label>
                <input type="number" id="boat-year" name="boat_year" required min="1900" max="2030" placeholder="e.g., 2005">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="asking-price">Asking Price (USD) <span class="required">*</span></label>
                <input type="number" id="asking-price" name="asking_price" required min="0" placeholder="e.g., 15000">
                <small>Enter numbers only, no $ or commas</small>
              </div>

              <div class="form-group">
                <label for="boat-location">Location <span class="required">*</span></label>
                <input type="text" id="boat-location" name="location" required placeholder="e.g., Lake Travis, Austin, Texas">
                <small>City/Lake and State</small>
              </div>
            </div>
          </div>

          <!-- Contact Information -->
          <div class="form-section">
            <h2>Your Contact Information</h2>
            <p style="color: var(--color-text-muted); margin-bottom: var(--space-lg);">
              This information will be displayed on your listing so buyers can reach you.
            </p>

            <div class="form-row">
              <div class="form-group">
                <label for="contact-name">Your Name <span class="required">*</span></label>
                <input type="text" id="contact-name" name="contact_name" required placeholder="Your name">
              </div>

              <div class="form-group">
                <label for="contact-email">Email Address <span class="required">*</span></label>
                <input type="email" id="contact-email" name="contact_email" required placeholder="your@email.com">
              </div>

              <div class="form-group">
                <label for="contact-phone">Phone Number</label>
                <input type="tel" id="contact-phone" name="contact_phone" placeholder="512-555-1234">
                <small>Optional but recommended</small>
              </div>
            </div>
          </div>

          <!-- Boat Description -->
          <div class="form-section">
            <h2>Boat Description</h2>

            <div class="form-group">
              <label for="boat-description">Detailed Description <span class="required">*</span></label>
              <textarea id="boat-description" name="description" required placeholder="Describe your boat's condition, history, recent maintenance, upgrades, and why you're selling. Be as detailed as possible - good descriptions sell boats faster!"></textarea>
              <small>Include condition, sailing history, recent maintenance, and reason for selling</small>
            </div>

            <div class="form-group">
              <label for="boat-features">Features & Equipment <span class="required">*</span></label>
              <textarea id="boat-features" name="features" required placeholder="List features one per line, for example:
- Roller furling jib
- Bimini top with side curtains
- 9.9 HP outboard motor (2018)
- Depth sounder
- VHF radio
- Trailer included"></textarea>
              <small>List each feature on a new line</small>
            </div>
